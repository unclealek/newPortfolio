---
interface Props {
  
  title: string;
  date: string;
  excerpt: string;
  slug: string;
  
}

const { title, date, excerpt, slug } = Astro.props;
---

<article class="border-b pb-8">
    <h2 class="text-2xl font-bold mb-2">
      <a href={`/blog/${slug}`} class="hover:text-blue-600">
        {title}
      </a>
    </h2>
    <p class="text-gray-600 mb-4">{date}</p>
    <p>{excerpt}</p>
  </article>